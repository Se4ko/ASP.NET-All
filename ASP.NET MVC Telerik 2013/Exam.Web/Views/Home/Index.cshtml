@model IEnumerable<Exam.Web.Models.HomeTicketViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="row-fluid">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var ticket = Model.ElementAt(i);
            <div class="span4">
                <h2>@ticket.Title</h2>
                <p><strong>Category: </strong>@ticket.CategoryName</p>
                <p><strong>Author: </strong>@ticket.Author</p>
                <p>@(ticket.NumberOfComments) Comment(s)</p>
                <p>@Html.ActionLink("More Details..", "Details", "Tickets", new { ticket.Id }, new { @class = "btn" })</p>
            </div>

            if (i > 0 && (i + 1) % 3 == 0)
            {
                @:</div>
                @:<div class="row-fluid">
            }
        }
    </div>
</div>